{
  "compilerOptions": {
    "lib": ["dom", "es2018"],
    "module": "commonjs", // commonjs and umd are the only two modes that can be used in both nodejs and a webbrowser
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowJs": true,
    "types": ["node"]
  },

  "exclude": ["node_modules", "**/node_modules", "dist"]
}
